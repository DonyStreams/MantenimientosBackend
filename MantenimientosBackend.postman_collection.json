            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Limpiar tokens locales independientemente del resultado",
                  "pm.collectionVariables.set('jwt_token', '');",
                  "pm.collectionVariables.set('refresh_token', '');",
                  "",
                  "// Tambi√©n limpiar de variables de ambiente si existen",
                  "if (pm.environment.has('jwt_token')) {",
                  "    pm.environment.set('jwt_token', '');",
                  "}",
                  "if (pm.environment.has('refresh_token')) {",
                  "    pm.environment.set('refresh_token', '');",
                  "}",
                  "",
                  "// Evaluar el resultado",
                  "if (pm.response.code === 204 || pm.response.code === 200) {",
                  "    pm.test('‚úÖ Logout exitoso en Keycloak', function () {",
                  "        pm.expect(pm.response.code).to.be.oneOf([200, 204]);",
                  "    });",
                  "    console.log('‚úÖ Sesi√≥n cerrada exitosamente en Keycloak');",
                  "} else if (pm.response.code === 400) {",
                  "    const responseText = pm.response.text();",
                  "    if (responseText.includes('invalid_grant') || responseText.includes('Invalid refresh token')) {",
                  "        console.log('‚ö†Ô∏è Refresh token inv√°lido o expirado');",
                  "        console.log('üí° El token principal probablemente ya expir√≥ naturalmente');",
                  "        pm.test('‚ö†Ô∏è Logout con refresh token inv√°lido (esperado)', function () {",
